    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch: idl push",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/idl/main.go",
            "args": ["push", "0.0.0-development"],
            "cwd": "${workspaceRoot}/docs/examples/full"
        },
        {
            "name": "Launch: idl pull",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/idl/main.go",
            "args": ["pull"],
            "cwd": "${workspaceRoot}/docs/examples/full"
        },
        {
            "name": "Launch: idl-repository",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceRoot}/cmd/idl-repository/main.go",
            "args": ["--port=8080"],
            "cwd": "${workspaceRoot}"
        }
    ]
}